<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip">

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip">

        <ImageView
            android:id="@+id/authorAvatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/no_avatar" />

    </LinearLayout>

    <!-- Author Name -->
    <TextView
        android:id="@+id/authorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="username"
        android:textColor="#3b73af"
        android:textSize="12dip"
        android:textStyle="bold"
        android:layout_above="@+id/commentBody"
        android:layout_alignLeft="@+id/commentBody"
        android:layout_alignStart="@+id/commentBody" />

    <!-- Right End Arrow -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/abc_ic_go_search_api_mtrl_alpha"
        android:visibility="invisible" />

    <!-- Comment Info -->
    <TextView
        android:id="@+id/commentBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="comment for this issue"
        android:textColor="#343434"
        android:textSize="10dip"
        android:textStyle="bold"
        android:layout_alignParentBottom="true" />

    <!-- comment time -->
    <TextView
        android:id="@+id/commentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:text="24/Apr/16 18:38"
        android:textColor="#701b1b"
        android:textSize="10dip"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />


</RelativeLayout>

